<Window x:Class="LeThanhHaiWPF.StaffManagement.CreateUpdateCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create/Update Category" Height="333" Width="411">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Category Name Label and TextBox -->
        <Label Content="Category Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="txtCategoryName" Grid.Row="0" Grid.Column="1" Margin="0,5,0,5"/>

        <!-- Description Label and TextBox -->
        <Label Content="Description:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0"/>
        <TextBox x:Name="txtDescription" Grid.Row="1" Grid.Column="1" Margin="0,5,0,5" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True"/>

        <!-- Save Button -->
        <Button Content="Save" Grid.Row="3" Grid.Column="1" Width="80" HorizontalAlignment="Right" Margin="0,10,0,0" Click="BtnSave_Click"/>
    </Grid>
</Window>
